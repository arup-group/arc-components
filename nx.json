{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "extends": "nx/presets/core.json",
  "npmScope": "@arc-web",
  "workspaceLayout": {
    "appsDir": "playgrounds",
    "libsDir": "packages"
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["lint", "test", "build", "preview"]
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build", "lint", "test"]
    },
    "preview": {
      "dependsOn": ["build"]
    }
  }
}
