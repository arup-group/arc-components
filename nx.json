{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "extends": "nx/presets/core.json",
  "npmScope": "@arc-web",
  "workspaceLayout": {
    "appsDir": "playgrounds",
    "libsDir": "packages"
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "lint",
          "test",
          "build",
          "preview",
          "storybook:build",
          "storybook:serve"
        ]
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build", "lint", "test"]
    },
    "serve": {
      "dependsOn": ["^build"]
    },
    "preview": {
      "dependsOn": ["build"]
    },
    "storybook:build": {
      "dependsOn": ["build"]
    },
    "storybook:serve": {
      "dependsOn": ["build"]
    }
  }
}
