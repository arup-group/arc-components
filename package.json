{
  "name": "@arc-web/components",
  "description": "Web-components built on the ARC design system",
  "version": "1.2.1",
  "author": "arc-component",
  "license": "MIT",
  "main": "dist/arc.js",
  "module": "dist/arc.js",
  "customElements": "custom-elements.json",
  "types": "dist/arc.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=16.13.0"
  },
  "keywords": [
    "web components",
    "custom elements",
    "components"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/arup-group/arc-components"
  },
  "scripts": {
    "start": "tsc && yarn copy-dev && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wds\"",
    "build": "rimraf dist && tsc && rollup -c rollup.config.js && npm run analyze -- --exclude dist",
    "start:build": "web-dev-server --root-dir dist --app-index index.html --open",
    "storybook": "tsc && yarn copy-dev && yarn analyze --exclude dist && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wds -c .storybook/server.mjs\"",
    "storybook:build": "tsc && npm run analyze -- --exclude dist && build-storybook",
    "test": "tsc && wtr --coverage",
    "test:watch": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wtr --watch\"",
    "format": "eslint --ext .ts,.html . --fix --ignore-path .gitignore && prettier \"**/*.ts\" --write --ignore-path .gitignore && stylelint \"**/*.css\" --fix --ignore-path .gitignore",
    "lint": "eslint --ext .ts,.html . --ignore-path .gitignore && prettier \"**/*.ts\" --check --ignore-path .gitignore && stylelint \"**/*.css\" --ignore-path .gitignore",
    "copy-dev": "cpx \"src/components/icon/*.svg\" out-tsc/src/components/icon",
    "copy-prod": "cpx \"src/components/icon/*.svg\" out-tsc/src/components/icon && cpx \"src/themes/*.css\" dist/themes && cpx \"src/fonts/*.woff\" dist/fonts",
    "analyze": "cem analyze --litelement"
  },
  "dependencies": {
    "lit": "^2.0.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.4",
    "@custom-elements-manifest/analyzer": "^0.4.17",
    "@open-wc/building-rollup": "^2.0.1",
    "@open-wc/dev-server-hmr": "^0.1.2",
    "@open-wc/eslint-config": "^4.3.0",
    "@open-wc/testing": "next",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "@web/dev-server": "^0.1.28",
    "@web/dev-server-esbuild": "^0.2.16",
    "@web/dev-server-storybook": "next",
    "@web/rollup-plugin-html": "^1.10.1",
    "@web/rollup-plugin-import-meta-assets": "^1.0.7",
    "@web/test-runner": "next",
    "babel-plugin-template-html-minifier": "^4.1.0",
    "concurrently": "^5.3.0",
    "cpx": "^1.5.0",
    "deepmerge": "^4.2.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "prettier": "^2.4.1",
    "sinon": "^12.0.1",
    "stylelint": "^14.1.0",
    "stylelint-config-standard": "^24.0.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.60.0",
    "rollup-plugin-terser": "^7.0.2",
    "tslib": "^2.3.1",
    "typescript": "^4.5.2"
  },

  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.css": [
      "stylelint --fix"
    ]
  }
}
