{
  "name": "@arc-web/components",
  "description": "Web-components built on the ARC design system",
  "version": "1.7.2",
  "author": "arc-component",
  "license": "MIT",
  "main": "dist/arc.js",
  "module": "dist/arc.js",
  "customElements": "dist/custom-elements.json",
  "types": "dist/arc.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=16.13.0"
  },
  "keywords": [
    "web components",
    "custom elements",
    "components"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/arup-group/arc-components"
  },
  "scripts": {
    "start": "tsc && concurrently -k -r \"yarn run analyze --watch\" \"tsc --watch --preserveWatchOutput\" \"wds\"",
    "build": "tsc && yarn run analyze --outdir dist && rollup -c rollup.config.js",
    "create": "plop --plopfile scripts/plop/plopfile.mjs",
    "test": "wtr --coverage",
    "test:watch": "concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wtr --watch\"",
    "storybook": "tsc && concurrently -k -r \"yarn run analyze --watch\" \"tsc --watch --preserveWatchOutput\" \"start-storybook -p 9009\"",
    "storybook:build": "tsc && yarn run analyze && build-storybook",
    "format": "eslint --ext .ts,.html . --fix --ignore-path .gitignore && prettier \"**/*.ts\" --write --ignore-path .gitignore && stylelint \"**/*.css\" --fix --ignore-path .gitignore",
    "lint": "eslint --ext .ts,.html . --ignore-path .gitignore && prettier \"**/*.ts\" --check --ignore-path .gitignore && stylelint \"**/*.css\" --ignore-path .gitignore",
    "analyze": "cem analyze --litelement --exclude out-tsc --exclude dist"
  },
  "dependencies": {
    "@azure/msal-browser": "^2.22.0",
    "@popperjs/core": "^2.11.0",
    "date-fns": "^2.28.0",
    "lit": "^2.0.2",
    "tabbable": "^5.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@custom-elements-manifest/analyzer": "^0.4.17",
    "@open-wc/building-rollup": "^2.0.1",
    "@open-wc/dev-server-hmr": "^0.1.2",
    "@open-wc/eslint-config": "^7.0.0",
    "@open-wc/testing": "next",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-replace": "^3.1.0",
    "@storybook/addon-actions": "^6.4.19",
    "@storybook/addon-docs": "^6.4.19",
    "@storybook/addon-essentials": "^6.4.19",
    "@storybook/addon-links": "^6.4.19",
    "@storybook/theming": "^6.4.19",
    "@storybook/web-components": "^6.4.19",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "@web/dev-server": "^0.1.28",
    "@web/dev-server-esbuild": "^0.2.16",
    "@web/dev-server-rollup": "^0.3.15",
    "@web/rollup-plugin-html": "^1.10.1",
    "@web/test-runner": "^0.13.16-next.0",
    "babel-loader": "^8.2.3",
    "babel-plugin-template-html-minifier": "^4.1.0",
    "concurrently": "^5.3.0",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-lit-a11y": "^2.2.0",
    "eslint-plugin-wc": "^1.3.2",
    "husky": "^7.0.4",
    "lint-staged": "^12.0.2",
    "plop": "^3.0.5",
    "prettier": "^2.4.1",
    "rollup": "^2.68.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-inject-process-env": "^1.3.1",
    "rollup-plugin-terser": "^7.0.2",
    "sinon": "^13.0.1",
    "storybook": "^6.4.19",
    "stylelint": "^14.5.0",
    "stylelint-config-standard": "^25.0.0",
    "tslib": "^2.3.1",
    "typescript": "^4.5.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.css": [
      "stylelint --fix"
    ]
  }
}
