{
  "name": "@arc-web/components",
  "description": "Web-components built on the ARC design system",
  "version": "2.3.0",
  "author": "arc-component",
  "license": "MIT",
  "main": "dist/arc.js",
  "types": "dist/arc.d.ts",
  "module": "dist/arc.js",
  "customElements": "custom-elements.json",
  "exports": {
    ".": "./dist/arc.js",
    "./dist/*": "./dist/*",
    "./react": "./dist/react.js"
  },
  "typesVersions": {
    "*": {
      "react": [
        "./dist/react.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=16.13.0"
  },
  "keywords": [
    "web components",
    "custom elements",
    "components"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/arup-group/arc-components"
  },
  "scripts": {
    "prepare": "husky install",
    "start": "tsc && concurrently -k -r \"yarn run analyze --watch\" \"tsc --watch --preserveWatchOutput\" \"wds\"",
    "build": "tsc && yarn run analyze --outdir dist && rollup -c rollup.config.js",
    "create": "plop --plopfile scripts/plop/plopfile.mjs",
    "test": "wtr --coverage",
    "test:watch": "concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wtr --watch\"",
    "storybook": "tsc && concurrently -k -r \"yarn run analyze --watch\" \"tsc --watch --preserveWatchOutput\" \"start-storybook -p 9009\"",
    "storybook:build": "tsc && yarn run analyze && build-storybook",
    "lint": "eslint --ext .ts,.html . --ignore-path .gitignore && prettier \"**/*.ts\" --check --ignore-path .gitignore && stylelint \"**/*.css\" --ignore-path .gitignore",
    "format": "eslint --ext .ts,.html . --fix --ignore-path .gitignore && prettier \"**/*.ts\" --write --ignore-path .gitignore && stylelint \"**/*.css\" --fix --ignore-path .gitignore",
    "analyze": "cem analyze --litelement --exclude out-tsc --exclude dist"
  },
  "dependencies": {
    "@azure/msal-browser": "^2.28.1",
    "@custom-elements-manifest/analyzer": "^0.6.4",
    "@floating-ui/dom": "^0.3.1",
    "@lit-labs/react": "^1.1.0",
    "date-fns": "^2.29.1",
    "gridjs": "^5.0.2",
    "lit": "^2.4.1",
    "react": "^18.2.0",
    "tabbable": "^5.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.18.10",
    "@open-wc/building-rollup": "^2.0.2",
    "@open-wc/dev-server-hmr": "^0.1.3",
    "@open-wc/eslint-config": "^7.0.0",
    "@open-wc/testing": "3.1.6",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-replace": "^5.0.2",
    "@storybook/addon-actions": "^7.0.6",
    "@storybook/addon-docs": "^6.5.10",
    "@storybook/addon-essentials": "^6.5.10",
    "@storybook/addon-links": "^6.5.10",
    "@storybook/theming": "^6.5.10",
    "@storybook/web-components": "^6.5.10",
    "@types/react": "^18.0.24",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "@web/dev-server": "^0.1.33",
    "@web/dev-server-esbuild": "^0.2.16",
    "@web/dev-server-rollup": "^0.3.19",
    "@web/rollup-plugin-html": "^1.10.1",
    "@web/test-runner": "^0.13.31",
    "babel-loader": "^8.2.3",
    "babel-plugin-template-html-minifier": "^4.1.0",
    "concurrently": "^7.3.0",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-lit-a11y": "^2.2.2",
    "eslint-plugin-wc": "^1.3.2",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "plop": "^3.1.1",
    "prettier": "^2.7.1",
    "rollup": "^2.77.2",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-inject-process-env": "^1.3.1",
    "rollup-plugin-terser": "^7.0.2",
    "sinon": "^14.0.0",
    "storybook": "^6.5.10",
    "stylelint": "^15.10.1",
    "stylelint-config-standard": "^26.0.0",
    "tslib": "^2.3.1",
    "typescript": "^4.7.4"
  }
}
