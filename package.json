{
  "name": "@arc-web/components",
  "description": "Web-components built on the ARC design system",
  "version": "1.0.2",
  "author": "arc-component",
  "license": "MIT",
  "main": "dist/arc.js",
  "module": "dist/arc.js",
  "customElements": "dist/custom-elements.json",
  "type": "module",
  "types": "dist/arc.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=16.13.0"
  },
  "keywords": [
    "web components",
    "custom elements",
    "components"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/arup-group/arc-components"
  },
  "scripts": {
    "start": "tsc && yarn styles && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wds\"",
    "build": "tsc && yarn styles && yarn icons && yarn analyze",
    "test": "tsc && wtr --coverage",
    "test:watch": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wtr --watch\"",
    "format": "eslint --ext .ts,.html . --fix --ignore-path .gitignore && prettier \"**/*.ts\" --write --ignore-path .gitignore",
    "lint": "eslint --ext .ts,.html . --ignore-path .gitignore && prettier \"**/*.ts\" --check --ignore-path .gitignore",
    "styles": "node scripts/make-css.js --outdir dist",
    "icons": "node scripts/copy-icons.js --outdir dist",
    "analyze": "cem analyze --litelement --exclude dist --outdir dist"
  },
  "dependencies": {
    "@web/dev-server-esbuild": "^0.2.14",
    "lit": "^2.0.2"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.5.3",
    "@open-wc/dev-server-hmr": "^0.1.2",
    "@open-wc/eslint-config": "^4.3.0",
    "@open-wc/testing": "next",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "@web/dev-server": "^0.1.25",
    "@web/test-runner": "next",
    "chalk": "^4.1.2",
    "command-line-args": "^5.2.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "globby": "^12.0.2",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "mkdirp": "^1.0.4",
    "prettier": "^2.4.1",
    "sinon": "^11.1.2",
    "strip-css-comments": "^5.0.0",
    "tslib": "^2.3.1",
    "typescript": "^4.4.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
