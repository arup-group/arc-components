{
  "name": "components",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/components/src",
  "projectType": "library",
  "targets": {
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/components/package.json",
          "packages/components/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx web-test-runner --config packages/components/web-test-runner.config.mjs"
      }
    },
    "build-typescript": {
      "executor": "@nx/js:tsc",
      "options": {
        "outputPath": "dist/packages/components",
        "main": "packages/components/src/index.ts",
        "tsConfig": "packages/components/tsconfig.json",
        "assets": [
          "README.md",
          "LICENSE",
          {
            "glob": "**/*",
            "input": "packages/components/assets",
            "output": "assets"
          },
          {
            "glob": "**/*",
            "input": "packages/components/themes",
            "output": "themes"
          }
        ]
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx custom-elements-manifest analyze --litelement --globs \"dist/packages/components/src/**/*.js\" --outdir dist/packages/components"
      },
      "dependsOn": ["build-typescript"]
    },
    "storybook:build": {
      "executor": "@nx/storybook:build",
      "options": {
        "outputDir": "dist/packages/storybook",
        "configDir": "packages/components/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "storybook:preview": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx @web/dev-server --root-dir dist/packages/storybook --port 4200",
        "cwd": ".",
        "parallel": false
      }
    },
    "storybook:serve": {
      "executor": "@nx/storybook:storybook",
      "options": {
        "port": 4200,
        "configDir": "packages/components/.storybook"
      }
    }
  }
}
