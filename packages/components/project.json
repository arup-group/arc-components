{
  "name": "components",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/components/src",
  "projectType": "library",
  "tags": ["package"],
  "targets": {
    "ph-icon-assemble": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "npx ts-node --project scripts/tsconfig.scripts.json scripts/ph-icon-assemble.ts",
          "npx prettier --write packages/components/src/components/ph-icon",
          "npx prettier --write packages/react/src/components/ph-icon"
        ],
        "parallel": false
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/components/package.json",
          "packages/components/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx web-test-runner --config packages/components/web-test-runner.config.mjs"
      }
    },
    "prebuild": {
      "executor": "@nx/js:tsc",
      "options": {
        "outputPath": "dist/packages/components",
        "main": "packages/components/src/index.ts",
        "tsConfig": "packages/components/tsconfig.json",
        "assets": [
          "README.md",
          "LICENSE",
          {
            "glob": "**/*",
            "input": "packages/components/themes",
            "output": "themes"
          }
        ]
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "echo foo"
      },
      "dependsOn": ["prebuild"]
    },
    "storybook:build": {
      "executor": "@nx/storybook:build",
      "options": {
        "outputDir": "dist/packages/storybook",
        "configDir": "packages/components/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      },
      "dependsOn": ["build"]
    },
    "storybook:preview": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx @web/dev-server --root-dir dist/packages/storybook --port 4200",
        "cwd": ".",
        "parallel": false
      },
      "dependsOn": ["storybook:build"]
    },
    "storybook:serve": {
      "executor": "@nx/storybook:storybook",
      "options": {
        "port": 4200,
        "configDir": "packages/components/.storybook"
      },
      "dependsOn": ["build"]
    }
  }
}
