{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "lib": [
      "dom",
      "dom.Iterable",
      "es2020"
    ],
    "declaration": true,
    "incremental": false,
    "outDir": "./out-tsc",
    "rootDir": "./src",
    "noImplicitAny": true,
    "strictNullChecks": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "moduleResolution": "node",
    "esModuleInterop": true,

    "experimentalDecorators": true,
    "importHelpers": true,
    "removeComments": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "out-tsc",
    "dist",
    "node_modules",
    "src/**/*.test.ts"
  ]
}
